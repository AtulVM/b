---
// Import the necessary components
import MainLayout from "@/layouts/MainLayout.astro";
import HeroSection from "@components/sections/landing/HeroSection.astro";
import HeroSectionAlt from "@components/sections/landing/HeroSectionAlt.astro";
import ClientsSection from "@components/sections/landing/ClientsSection.astro";
import FeaturesGeneral from "@components/sections/features/FeaturesGeneral.astro";
import FeaturesNavs from "@components/sections/features/FeaturesNavs.astro";
import AnnouncementBanner from "@components/ui/banners/AnnouncementBanner.astro";
import heroImage from "@images/4+4N.png";
import faqs from "@data/faqs.json";
import features from "@data/features.json";
import pricing from "@data/pricing.json";
import featureImage from "@images/3+3N.png";
import presentation from "@images/presentation.jpg";
import p44 from "@images/4+4N.jpg";
import p33 from "@images/3+3N.jpg";
import tools from "@images/automated-tools.avif";
import dashboard from "@images/dashboard-image.avif";
import { partnersData } from "@/data_files/constants";
import logopng from "/src/public/logo.png";
---

<MainLayout>
  <HeroSection
    title=`B-Indian Industries Presents       <Image src={logopng} class="h-8" alt="B-Indian Logo" />

    `
    subTitle="Reach With Exellence"
    primaryBtn="Start Exploring"
    primaryBtnURL="/products"
    src={heroImage}
    alt="Stack of ScrewFast product boxes containing assorted hardware tools"
  />
  <!--ClientsSection
    title="Trusted by Retail Partners"
    subTitle="Experience the reliability chosen by retail giants."
    partners={partnersData}
  />
  <img src="/src/images/subix.png" /-->
  <FeaturesNavs
    title=`<img src="/src/images/logo.png" class="h-8 inline-block mb-1" alt="B-Indian Logo" /> Power Cords`
    tabs={[
      {
        heading: "4+4 Power Strip",
        content:
          "The Indiva 4+4 Power Extension Cord is a robust and essential solution for managing multiple domestic appliances from a single power source. Engineered for safety and convenience, this unit features four universal sockets alongside 4 On/Off switches for individual control.",
        svg: "tools",
        src: p44,
        alt: "Yellow and black heavy equipment on brown grass field",
        first: true,
      },
      {
        heading: "1+4 Power Strip",
        content:
          "The Indiva 1+4 Power Extension Cord is a robust and essential solution for managing multiple domestic appliances from a single power source. Engineered for safety and convenience, this unit features four universal sockets alongside a single master On/Off switch for centralized control.",
        svg: "dashboard",
        src: presentation,
        alt: "A screenshot or graphic representation of the intuitive dashboard",
        second: true,
      },
      {
        heading: "3+3 Power Strip",
        content:
          "The Indiva 3+3 Power Extension Cord is a robust and essential solution for managing multiple domestic appliances from a single power source. Engineered for safety and convenience, this unit features four universal sockets alongside 3 On/Off switches for individual control.",
        svg: "house",
        src: p33,
        alt: "Gray metal building frame near tower crane during daytime",
      },
    ]}
  />
  <FeaturesGeneral
    title="Meeting Industry Demands"
    subTitle="Engineered for safety, durability, and performance, iNDiVA power strips deliver reliable power where you need it most. With sleek design, surge protection, and smart spacing, iNDiVA keeps your devices powered and your space organized â€” empowering your everyday with excellence."
    src={featureImage}
    alt="ScrewFast products in floating boxes"
    features={features}
  />
</MainLayout>
